<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css">
</head>
<body>

<div class="container">
  <%= yield %>

  <div class="row">
    <div class="col-md-4">
      <a href="/rock" class="btn btn-success btn-block btn-lg">Play rock.</a>
    </div>

    <div class="col-md-4">
      <a href="/paper" class="btn btn-success btn-block btn-lg">Play paper.</a>
    </div>

    <div class="col-md-4">
      <a href="/scissors" class="btn btn-success btn-block btn-lg">Play scissors.</a>
    </div>
  </div>
</div>

</body>
</html>
